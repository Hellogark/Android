<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dropdown"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/wallet_bright_foreground_disabled_holo_light">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nomCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="264dp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="264dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="169dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="169dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/nomCategoria"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/arrow_down_float" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>